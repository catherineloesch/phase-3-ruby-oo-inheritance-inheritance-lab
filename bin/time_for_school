#!/usr/bin/env ruby

require_relative "../lib/user"
require_relative "../lib/teacher"
require_relative "../lib/student"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"


some_knowledge = avi.teach 
steve.learn(some_knowledge)

puts "Steve just learned this important knowledge: '#{steve.knowledge.first}' from Avi"

some_more_knowledge = avi.teach 
steve.learn(some_more_knowledge)

puts "Steve just learned this important knowledge: '#{steve.knowledge[1]}' from Avi"

jim = User.new
jim.first_name = "Jim"
jim.last_name = "Parsons"

bill = Student.new
steve.first_name = "Bill"
steve.last_name = "Gates"

new_knowledge = avi.teach 
bill.learn(new_knowledge)

puts "Steve knows: #{steve.knowledge}"
puts "Bill knows: #{bill.knowledge}"
